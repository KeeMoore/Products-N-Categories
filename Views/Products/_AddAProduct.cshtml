@model Product

<div class="card shadow">
    <div class="card-body">
        <form asp-action="CreateProduct" asp-controller="Products" method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="Name" id="focus-input"></label>
                <input class="form-control" asp-for="Name">
                <span class="form-text text-warning" asp-validation-for="Name"></span>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Add Product</button>
            </div>
        </form>
    </div>
</div>
